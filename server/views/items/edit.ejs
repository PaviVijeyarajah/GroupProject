<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="itemTextField">Item Name</label>
                    <input type="text" class="form-control"
                    id="itemTextField"
                    placeholder="Enter the Item name"
                    name="item" 
                    value="<%= Item.item %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="stockTextField">Stock</label>
                    <input type="text" class="form-control"
                    id="stockTextField"
                    placeholder="Enter the stock number"
                    name="stock" 
                    value="<%= Item.stock %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Price"
                    name="price" 
                    value="<%= Item.price %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="ModelTextField">Model</label>
                    <input type="text" class="form-control"
                    id="ModelTextField"
                    placeholder="Enter the Model number"
                    name="model" 
                    value="<%= Item.model %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="conditionTextField">Condition</label>
                    <input type="text" class="form-control"
                    id="conditionTextField"
                    placeholder="Enter the Item condition"
                    name="condition" 
                    value="<%= Item.condition %>"
                    required>
                </div>

                 <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter description"
                    name="description" 
                    required>
                    <%= Item.description %>
                    </textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/itemlist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>